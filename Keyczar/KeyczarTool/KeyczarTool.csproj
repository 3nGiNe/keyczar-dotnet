<Project Sdk="Microsoft.NET.Sdk" >
  <PropertyGroup>
    <TargetFramework>net40</TargetFramework>
    <OutputType>Exe</OutputType>
    <Description>Keyczar dotnet</Description>
    <Company></Company>
    <Authors> jbtule </Authors>
    <Copyright>Copyright © Contributors 2012-2017"</Copyright>
    <AssemblyVersion>0.7.7.1</AssemblyVersion>
    <FileVersion>0.7.7.1</FileVersion>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="ManyConsole" Version="0.4.2.*" />
    <PackageReference Include="NDesk.Options" Version="0.2.*" />
    <PackageReference Include="DiminishDependencies.Tool" Version="1.1.3" ExcludeAssets="contentfiles" PrivateAssets="All" />
 </ItemGroup>
 <ItemGroup>
    <Reference Include="Microsoft.CSharp" />
    <Reference Include="System.Data" />
    <Reference Include="System.Data.DataSetExtensions" />
    <Reference Include="System.Xml" />
    <Reference Include="System.Numerics" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Keyczar\Keyczar.csproj" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Localized.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Localized.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <Compile Update="Localized.Designer.cs">
      <DependentUpon>Localized.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent"> 
    <Exec Command="'$(ProjectDir)\..\packages\diminishdependencies.tool\1.1.3\tools\DiminishDependencies.exe' -o '$(ProjectDir)\..\KeyczarTool.Minified\Diminish\refs' '$(TargetDir)KeyczarTool.exe' '$(TargetDir)*.dll'" /> 
  </Target>

</Project>
